<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_fasilitas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:layout_marginBottom="100dp"
    android:background="@color/greylight2">


    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textColor="#000"
                android:fontFamily="@font/roboto_regular"
                android:text="Nama Fasilitas"/>
            <TextView
                android:id="@+id/listNamaFasilitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginLeft="150dp"
                android:textColor="#000"
                android:text="Kursi"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/design_default_color_primary_dark"
            android:layout_marginTop="140dp"
            android:focusable="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#000"
                android:text="Keterangan"/>
            <TextView
                android:id="@+id/listKeterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="168dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#000"
                android:text="Kaki nya patah"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginLeft="20dp"
                android:textColor="#000"
                android:text="Status"/>
            <TextView
                android:id="@+id/listStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginLeft="200dp"
                android:text="Rusak"
                android:textColor="@color/red"/>
        </LinearLayout>
        <TextView
            android:id="@+id/listIdLaporan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="165dp"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:text="#000"
            android:textColor="#000"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_regular"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>