<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_pembayaran"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true"
    android:background="@color/greylight2">

    
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="15dp">

        <TextView
            android:textColor="#000"
            android:id="@+id/listID1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

            <ImageView
                android:id="@+id/imgCard"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:src="@drawable/woman"/>
        <TextView
            android:id="@+id/listIdPembayaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="10dp"
            android:text="#000"
            android:textColor="#000"
            android:textSize="12sp"
            android:fontFamily="@font/roboto_regular"/>

        <TextView
                android:id="@+id/listNamaPembayar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imgCard"
                android:layout_toRightOf="@+id/imgCard"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/black"
                android:text="Nama Penghuni"/>
            <TextView
                android:id="@+id/listKamarPembayar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/listNamaPembayar"
                android:layout_toEndOf="@id/imgCard"
                android:layout_toRightOf="@+id/imgCard"
                android:hint="No kamar" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d8d8e3"
            android:layout_marginTop="75dp"
            android:focusable="false" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">
        <TextView
            android:id="@+id/txtText3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#000"
            android:text="Total Biaya"/>
            <TextView
                android:id="@+id/listTotalBiaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="220dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#000"
                android:text="Rp.800.000"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp">
            <TextView
                android:id="@+id/txtText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#000"
                android:text="Tanggal Bayar"/>
            <TextView
                android:id="@+id/listTanggalBayar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#000"
                android:layout_marginLeft="200dp"
                android:text="21 May 2019"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="#000"
                android:layout_marginLeft="20dp"
                android:text="Periode"/>
            <TextView
                android:id="@+id/ListPeriode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="242dp"
                android:text="January"
                android:textColor="@color/design_default_color_primary_dark"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>